<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Stack -->

    <item android:height="60dp">
        <shape>
            <corners android:radius="10dp"/>
            <gradient
                android:angle="-10"
                android:centerColor="#1ADCDCDC"
                android:endColor="#DCDCDC"
                android:startColor="#1ADCDCDC"
                android:type="linear" />
        </shape>
    </item>
    <item   android:height="55dp">
        <shape>
            <corners android:radius="5dp"/>
            <padding
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"
                android:left="1dp"/>
            <solid android:color="@color/colorAccent"/>
        </shape>
    </item>


</layer-list>