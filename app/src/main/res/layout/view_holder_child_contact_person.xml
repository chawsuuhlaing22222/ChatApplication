<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivContactPerson"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        android:scaleType="centerCrop"
        android:src="@drawable/post_img_2"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_toEndOf="@id/ivContactPerson"
        android:layout_alignBottom="@id/ivContactPerson"
        android:layout_marginStart="-20dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/icon_active"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_20dp"/>

    <TextView
        android:id="@+id/tvNameInContact"
        android:layout_toEndOf="@id/ivContactPerson"
        android:layout_marginStart="@dimen/margin_medium"
        android:text="Mg Mg"
        android:layout_marginTop="@dimen/margin_medium"
        android:textAlignment="center"
        android:letterSpacing="-0.03"
        android:fontFamily="@font/notosan_regular"
        android:textSize="@dimen/text_regular_2x"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    
    <CheckBox
        android:id="@+id/checkToAddGroupChat"
        android:visibility="gone"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:button="@drawable/custom_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>