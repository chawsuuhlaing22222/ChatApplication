<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/llTextMsg"
        android:visibility="gone"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:background="@color/color_F3"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvText"
            android:text="How are you?"
            android:textAlignment="textStart"
            android:fontFamily="@font/notosan_regular"
            android:textSize="@dimen/text_regular_2x"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDateInChatFromOther"
            android:text="2am"
            android:fontFamily="@font/notosan_regular"
            android:textSize="8sp"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llImageMsg"
        android:gravity="end"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivImageMsg"
           android:scaleType="centerCrop"
            app:srcCompat="@drawable/post_img_2"
            android:layout_width="180dp"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/tvDateInChatFromOtherForImgMsg"
            android:text="2am"
            android:textAlignment="textStart"
            android:fontFamily="@font/notosan_regular"
            android:textSize="8sp"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>