<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/llTextMsgFromMe"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_me_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_below="@id/flMsg"
            android:layout_alignEnd="@id/flMsg"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvDateInChatFromMe"
                android:text="2am"
                android:layout_toStartOf="@id/ivSendMark"
                android:fontFamily="@font/notosan_regular"
                android:textSize="8sp"
                android:visibility="visible"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivSendMark"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_deliver"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_20dp"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/flMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvTextFromMe"
                android:text="How are you?"
                android:minWidth="100dp"
                android:visibility="visible"
                android:textAlignment="center"
                android:fontFamily="@font/dm_sans"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivImageMsgFromMe"
                android:visibility="gone"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/post_img_2"
                android:layout_width="180dp"
                android:layout_height="100dp"/>

        </FrameLayout>




    </RelativeLayout>


</RelativeLayout>